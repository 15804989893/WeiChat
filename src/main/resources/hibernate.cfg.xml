<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- 各属性的配置-->
        <!--为true表示将Hibernate发送给数据库的sql显示出来-->
        <property name = "hibernate.show_sql">true</property>
        <property name = "hibernate.transaction.auto_close_session">true</property>
        <!-- SQL方言，这边设定的是MySQL -->
        <property name = "hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <!-- 一次读的数据库记录数 -->
        <property name = "hibernate.jdbc.fetch_size">50</property>
        <!-- 设定对数据库进行批量删除 -->
        <property name = "hibernate.jdbc.batch_size">30</property>
        <!-- 使用本地事务jdbc事务，如果是使用全局jta事务，则需要配置为jta-->

        <property name = "hibernate.current_session_context_class">thread
        </property>
        <property name = "hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory
        </property>
        <property name = "hibernate.jdbc.use_scrollable_resultset">false</property>
        <property name = "hibernate.hbm2ddl.auto">update</property>
        <mapping class = "org.liyou.qixiaobo.entities.hibernate.Hero"></mapping>
        <mapping class = "org.liyou.qixiaobo.entities.hibernate.Skill"></mapping>
        <mapping class = "org.liyou.qixiaobo.entities.hibernate.HeroDetail"></mapping>
    </session-factory>
</hibernate-configuration>